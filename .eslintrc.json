{
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true,
      "jsx": true
    }
  },
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "es2021 ": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "rules": {
    "no-unused-vars": "warn",
    "semi": ["warn", "never"],
    "spaced-comment": ["warn", "always"],
    "react/prop-types": "off"
  },
  "globals": {
    "React": "readonly"
  }
}
